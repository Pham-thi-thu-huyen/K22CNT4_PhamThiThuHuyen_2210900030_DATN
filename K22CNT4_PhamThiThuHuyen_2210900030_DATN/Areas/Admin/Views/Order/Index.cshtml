@model IEnumerable<K22CNT4_PhamThiThuHuyen_2210900030_DATN.Models.EF.Order>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="page-header mb-3">
        <h3 class="fw-bold">Quản lý đơn hàng</h3>
    </div>

    <div class="card">
        <div class="card-body p-0">

            <table class="table table-bordered table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Địa chỉ nhận</th>
                        <th>SĐT</th>
                        <th>Trạng thái</th>
                        <th style="width:15%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Ordersid</td>
                            <td>@item.Customer?.Username</td>
                            <td>@item.OrdersDate?.ToString("dd/MM/yyyy")</td>
                            <td class="text-danger fw-bold">
                                @item.TotalMoney?.ToString("N0") đ
                            </td>
                            <td>@item.Address</td>
                            <td>@item.Phone</td>
                            <td>
                                @if (item.Isactive == 1)
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Đang xử lý</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Detail"
                                   asp-route-id="@item.Ordersid"
                                   class="btn btn-primary btn-sm">
                                    Chi tiết
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@item.Ordersid"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Xóa đơn hàng này?')">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
