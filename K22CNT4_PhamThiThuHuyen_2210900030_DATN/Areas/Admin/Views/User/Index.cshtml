@model IEnumerable<K22CNT4_PhamThiThuHuyen_2210900030_DATN.ViewModels.UserManageVM>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="page-header mb-3">
        <h3 class="fw-bold">Quản lý người dùng</h3>
    </div>

    <div class="card">
        <div class="card-body p-0">

            <table class="table table-bordered table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Tên đăng nhập</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Địa chỉ</th>
                        <th>Loại tài khoản</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>
                                @if (item.Role == "ADMIN")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">User</span>
                                }
                            </td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bị khóa</span>
                                }
                            </td>
                            <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.Role == "CUSTOMER")
                                {
                                    <a asp-action="DeleteCustomer"
                                       asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('Xóa người dùng này?')">
                                        Xóa
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ToggleAdmin"
                                       asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm">
                                        @(item.Status ? "Khóa" : "Mở")
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
