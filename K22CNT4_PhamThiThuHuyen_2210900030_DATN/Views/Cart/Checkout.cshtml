@model K22CNT4_PhamThiThuHuyen_2210900030_DATN.ViewModels.CheckoutVM

<h2>Thanh toán</h2>

<form asp-action="Checkout" method="post" class="container">

    <div class="mb-3">
        <label>Họ tên người nhận</label>
        <input asp-for="NameReceiver" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Số điện thoại</label>
        <input asp-for="Phone" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Địa chỉ</label>
        <input asp-for="Address" class="form-control" required />
    </div>

    <h4 class="text-end">
        Tổng tiền:
        <span class="text-danger">
            @Model.TotalMoney.ToString("N0") ₫
        </span>
    </h4>

    <div class="text-end mt-4">
        <button type="submit" class="btn btn-success px-4">
            Đặt hàng
        </button>
    </div>
</form>
<h5 class="mt-3">Phương thức vận chuyển</h5>

@foreach (var item in ViewBag.TransportMethods)
{
    <div class="form-check">
        <input class="form-check-input"
               type="radio"
               name="TransportMethodId"
               value="@item.TransportMethodid"
               required />
        <label class="form-check-label">
            @item.Name
            <small class="text-muted">(@item.Notes)</small>
        </label>
    </div>
}

