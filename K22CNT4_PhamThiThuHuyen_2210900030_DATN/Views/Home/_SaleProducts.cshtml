@model List<K22CNT4_PhamThiThuHuyen_2210900030_DATN.ViewModels.ProductVM>

<div class="row g-4">
    @foreach (var p in Model)
    {
        <div class="col-6 col-md-4 col-lg-3">
            <div class="home-product-card h-100 position-relative">

                <span class="sale-badge">SALE</span>

                <!-- Ảnh + tên → chi tiết -->
                <a asp-controller="Product"
                   asp-action="Detail"
                   asp-route-id="@p.Slug"
                   class="text-decoration-none text-dark">

                    <img src="@(string.IsNullOrEmpty(p.Image)
                                                      ? "/uploads/products/no-image.png"
                                                      : p.Image)"
                         class="img-fluid product-image"
                         alt="@p.Name" />

                    <h4 class="product-name mt-2">
                        @p.Name
                    </h4>
                </a>

                <p class="product-price">
                    @p.Price.ToString("N0") ₫
                </p>

                <!-- Nút chi tiết -->
                <a asp-controller="Product"
                   asp-action="Detail"
                   asp-route-id="@p.Slug"
                   class="btn btn-outline-success btn-detail">
                    Xem chi tiết
                </a>

            </div>
        </div>
    }
</div>
