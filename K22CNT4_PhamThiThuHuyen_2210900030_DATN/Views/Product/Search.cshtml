@model List<K22CNT4_PhamThiThuHuyen_2210900030_DATN.Models.EF.Product>

<h3 class="mb-4 p-4" style="font-size:15px">
    Kết quả tìm kiếm: "@ViewBag.Keyword"
</h3>

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm phù hợp.</p>
}
else
{
    <div class="row p-4">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@(item.ProductImages?
                                                          .FirstOrDefault(i => i.Isdefault == 1)?.Urlimg
                                                          ?? "/uploads/no-image.png")"
                         class="card-img-top" />

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@item.Name</h6>

                        <p class="text-danger fw-bold">
                            @(item.Price ?? 0).ToString("N0") ₫
                        </p>

                        <a asp-controller="Product"
                           asp-action="Detail"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-primary mt-auto">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
