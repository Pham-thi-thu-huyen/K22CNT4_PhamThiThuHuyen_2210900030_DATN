@model List<K22CNT4_PhamThiThuHuyen_2210900030_DATN.Models.EF.Review>

<h4 class="mt-5">Đánh giá sản phẩm</h4>

@if (!Model.Any())
{
    <p class="mt-5 p-4">Chưa có đánh giá nào.</p>
}
else
{
    @foreach (var r in Model)
    {
        <div class="border rounded p-3 mb-3">
            <strong>@r.Fullname</strong>
            <span class="text-warning ms-2">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="@(i <= r.Rating ? "bi bi-star-fill" : "bi bi-star")"></i>
                }
            </span>

            <p class="mb-1">@r.Content</p>
            <small class="text-muted">@r.CreatedDate?.ToString("dd/MM/yyyy")</small>

            @if (!string.IsNullOrEmpty(r.Reply))
            {
                <div class="mt-2 p-2 bg-light border-start border-3 border-success">
                    <strong>Phản hồi từ shop:</strong>
                    <p class="mb-0">@r.Reply</p>
                </div>
            }
        </div>
    }
}
