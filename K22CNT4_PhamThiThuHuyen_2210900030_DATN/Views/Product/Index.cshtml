@model IEnumerable<K22CNT4_PhamThiThuHuyen_2210900030_DATN.ViewModels.ProductVM>

@{
    ViewData["Title"] = ViewBag.Title ?? "Shop";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item active text-white">
            @ViewBag.Title
        </li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">@ViewBag.Title</h1>

        <div class="row g-4">
            <div class="col-lg-12">

                <!-- SEARCH + SORT -->
                <div class="row g-4">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">
                            <input type="search" class="form-control p-3"
                                   placeholder="Tìm kiếm sản phẩm...">
                            <span class="input-group-text p-3">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label>Sắp xếp:</label>
                            <select class="border-0 form-select-sm bg-light me-3">
                                <option>Mặc định</option>
                                <option>Giá tăng dần</option>
                                <option>Giá giảm dần</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row g-4">

                    <!-- SIDEBAR -->
                    <div class="col-lg-3">
                        <div class="row g-4">

                            @await Component.InvokeAsync("CategoryMenu")

                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4 class="mb-2">Khoảng giá</h4>
                                    <input type="range" class="form-range w-100"
                                           min="0" max="500"
                                           oninput="amount.value=this.value">
                                    <output id="amount">0</output>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- PRODUCT LIST -->
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">

                            @if (!Model.Any())
                            {
                                <div class="col-12 text-center">
                                    <p>Không có sản phẩm phù hợp.</p>
                                </div>
                            }

                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-lg-6 col-xl-4 d-flex">
                                    <div class="rounded position-relative fruite-item w-100">

                                        <!-- Ảnh + link chi tiết -->
                                        <a asp-controller="Product"
                                           asp-action="Detail"
                                           asp-route-slug="@item.Slug"
                                           class="product-link">

                                            <div class="fruite-img">
                                                <img src="@(string.IsNullOrEmpty(item.Image)
                                                                                          ? "/uploads/products/no-image.png"
                                                                                          : item.Image)"
                                                     class="img-fluid w-100 rounded-top"
                                                     alt="@item.Name"
                                                     style="height:250px; object-fit:cover;">
                                            </div>
                                        </a>

                                        <!-- Category -->
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                             style="top: 10px; left: 10px;">
                                            @item.CategoryName
                                        </div>

                                        <!-- Nội dung -->
                                        <div class="p-4 border border-secondary border-top-0 rounded-bottom product-body">

                                            <!-- Tên sản phẩm (cũng click được) -->
                                            <h4 class="product-name">
                                                <a asp-controller="Product"
                                                   asp-action="Detail"
                                                   asp-route-slug="@item.Slug"
                                                   class="text-dark text-decoration-none">
                                                    @item.Name
                                                </a>
                                            </h4>

                                            <p class="product-desc">
                                                @(string.IsNullOrEmpty(item.Description)
                                                                                            ? "Đang cập nhật mô tả..."
                                                                                            : item.Description)
                                            </p>

                                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                                <p class="text-dark fs-5 fw-bold mb-0">
                                                    @item.Price.ToString("N0") ₫
                                                </p>

                                                <a asp-controller="Product"
                                                   asp-action="Detail"
                                                   asp-route-slug="@item.Slug"
                                                   class="btn border border-secondary rounded-pill px-3 text-primary">
                                                    <i class="fa fa-shopping-bag me-2 text-primary"></i>
                                                    Xem chi tiết
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- PAGINATION -->
                            <div class="col-12">
                                <div class="pagination d-flex justify-content-center mt-5">
                                    <a href="#" class="rounded">&laquo;</a>
                                    <a href="#" class="active rounded">1</a>
                                    <a href="#" class="rounded">2</a>
                                    <a href="#" class="rounded">3</a>
                                    <a href="#" class="rounded">&raquo;</a>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
