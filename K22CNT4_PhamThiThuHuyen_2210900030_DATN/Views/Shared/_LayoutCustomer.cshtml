<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/home.css" rel="stylesheet">
    <link href="~/css/product-detail.css" rel="stylesheet" />
</head>

<body>
    <div>

        <!-- Navbar -->
        <div class="container-fluid fixed-top">

            <div class="container topbar bg-primary d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3">
                            <i class="fas fa-map-marker-alt me-2 text-secondary"></i>
                            <a href="#" class="text-white">123 Nguyễn Trãi, Việt Nam</a>
                        </small>
                        <small class="me-3">
                            <i class="fas fa-envelope me-2 text-secondary"></i>
                            <a href="#" class="text-white">huyenphamthithu@Example.com</a>
                        </small>
                    </div>
                </div>
            </div>

            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">

                    <!-- LOGO -->
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                        <img src="https://theme.hstatic.net/200000770807/1001123544/14/logo.png?v=353"
                             alt="Logo" width="180" height="80" />
                    </a>

                    <button class="navbar-toggler py-2 px-3"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>

                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">

                        <!-- MENU -->
                        <div class="navbar-nav mx-auto">

                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">
                                Trang chủ
                            </a>

                            <a asp-controller="Product" asp-action="Girls" class="nav-item nav-link">
                                Thời trang bé gái
                            </a>

                            <a asp-controller="Product" asp-action="Boys" class="nav-item nav-link">
                                Thời trang bé trai
                            </a>

                            <!-- USER -->
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    <a asp-controller="Account" asp-action="Login" class="dropdown-item">
                                        Đăng nhập
                                    </a>
                                    <a asp-controller="Account" asp-action="Register" class="dropdown-item">
                                        Đăng ký
                                    </a>
                                </div>
                            </div>

                        </div>

                        <!-- RIGHT ICONS -->
                        <div class="d-flex m-3 me-0">

                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4">
                                <i class="fas fa-search text-primary"></i>
                            </button>

                            @{
                                var cartCount = Context.Session.GetInt32("CART_COUNT") ?? 0;
                            }

                            <a asp-controller="Cart"
                               asp-action="Index"
                               class="position-relative me-4 my-auto">

                                <i class="fa fa-shopping-bag fa-2x"></i>

                                @if (cartCount > 0)
                                {
                                    <span class="position-absolute bg-danger rounded-circle
                  d-flex align-items-center justify-content-center text-white px-1"
                                          style="top:-5px; left:15px; height:20px; min-width:20px; font-size:12px;">
                                        @cartCount
                                    </span>
                                }
                            </a>


                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <!-- BODY -->
        <div style="min-height:400px; margin-top:150px">
            @RenderBody()
        </div>

        @await Html.PartialAsync("_Footer")
    </div>

    <!-- JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
