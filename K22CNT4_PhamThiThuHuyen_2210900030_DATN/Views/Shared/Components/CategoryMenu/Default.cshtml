@model IEnumerable<K22CNT4_PhamThiThuHuyen_2210900030_DATN.ViewModels.CategoryMenuVM>
<div class="mb-3">
    <h4>Danh mục</h4>
    <ul class="list-unstyled fruite-categorie">
        @foreach (var item in Model)
        {
            <li class="d-flex justify-content-between fruite-name">
                <a asp-controller="Product"
                   asp-action="Index"
                   asp-route-category="@item.Id">
                    <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                </a>
                <span>(@item.Slug)</span>
            </li>
        }
    </ul>
</div>